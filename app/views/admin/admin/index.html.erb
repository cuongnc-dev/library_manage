<div class="manage">
  <div class="panel panel-default filterable">
    <div class="header">
      <% flash.each do |key, message| %>
        <span class="alert-<%= key %>"><%= message %></span>
      <% end %>
      <% case %>
      <% when @books.present? %>
        <button class="btn btn-default btn-xs btn-filter">
        <span class="glyphicon glyphicon-filter"></span>
      </button>
        <strong>
          <%= t("books.total_book_found") + ": " %> <%= @books.size %>
        </strong>
      </div>
      <table class="table table-bordered table-hover">
        <thead>
          <tr class="filters">
            <th>
              <input type="text" class="form-control"
                placeholder="<%= t "books.title" %>" disabled>
            </th>
            <th>
              <input type="text" class="form-control"
                placeholder="<%= t "author" %>" disabled>
            </th>
            <th>
              <input type="text" class="form-control"
                placeholder="<%= t "category" %>" disabled>
            </th>
            <th>
              <input type="text" class="form-control"
                placeholder="<%= t "publisher" %>" disabled>
            </th>
            <th>
              <input type="text" class="form-control"
                placeholder="<%= t "books.current" %>" disabled>
            </th>
            <th>
              <input type="text" class="form-control"
                placeholder="<%= t "books.pages" %>" disabled>
            </th>
            <th>
              <input type="text" class="form-control"
                placeholder="<%= t "books.description" %>" disabled>
            </th>
            <th>
              <input type="text" class="form-control"
                placeholder="<%= t "books.image" %>" disabled>
            </th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "admin/books/index", collection: @books, as: :book %>
        </tbody>
      </table>
      <%= will_paginate @books %>
    <% when @users.present? %>
      <button class="btn btn-default btn-xs btn-filter">
        <span class="glyphicon glyphicon-filter"></span>
      </button>
      <strong>
        <%= t("users.total_user_found") + ": " %> <%= @users.size %>
      </strong>
    </div>
    <table class="table table-bordered table-hover">
      <thead>
        <tr class="filters">
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "name" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "email" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "phone" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "address" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "users.role" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "users.activated" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "books.image" %>" disabled>
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "admin/users/index", collection: @users, as: :user %>
      </tbody>
    </table>
    <%= will_paginate @users %>
    <% when @authors.present? %>
      <button class="btn btn-default btn-xs btn-filter">
        <span class="glyphicon glyphicon-filter"></span>
      </button>
      <strong>
        <%= t("authors.total_author_found") + ": " %> <%= @authors.size %>
      </strong>
    </div>
    <table class="table table-bordered table-hover">
      <thead>
        <tr class="filters">
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "authors.name" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "publishers.name" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "email" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "phone" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "address" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "books.image" %>" disabled>
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "admin/authors/index", collection: @authors, as: :author %>
      </tbody>
    </table>
    <%= will_paginate @authors %>
    <% when @categories.present? %>
      <button class="btn btn-default btn-xs btn-filter">
        <span class="glyphicon glyphicon-filter"></span>
      </button>
      <strong>
        <%= t("categories.total_category_found") + ": " %> <%= @categories.size %>
      </strong>
    </div>
    <table class="table table-bordered table-hover">
      <thead>
        <tr class="filters">
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "categories.name" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "subcategories.name" %>" disabled>
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "admin/categories/index", collection: @categories, as: :category %>
      </tbody>
    </table>
    <%= will_paginate @categories %>
    <% when @publishers.present? %>
      <button class="btn btn-default btn-xs btn-filter">
        <span class="glyphicon glyphicon-filter"></span>
      </button>
      <strong>
        <%= t("publishers.total_publisher_found") + ": " %> <%= @publishers.size %>
      </strong>
    </div>
    <table class="table table-bordered table-hover">
      <thead>
        <tr class="filters">
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "name" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "email" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "phone" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "address" %>" disabled>
          </th>
          <th>
            <input type="text" class="form-control"
              placeholder="<%= t "books.image" %>" disabled>
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "admin/publishers/index", collection: @publishers, as: :publisher %>
      </tbody>
    </table>
    <%= will_paginate @publishers %>
    <% else %>
      <p><%= t "search_result_alert" %></p>
    <% end %>
  </div>
</div>
