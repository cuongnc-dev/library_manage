<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title"><%= @book.title %></h3>
    </div>
    <div class="modal-body">
      <div class="col-md-4 picture">
        <div class="img-avatar bg">
          <%= image_tag @book.image.present? ? @book.image : Settings.book_avatar,
            id: "thumb" %>
        </div>
      </div>
      <div class="col-md-8 info">
        <div class="form-group input-group">
          <span class="has-float-label">
            <input type="text" class="form-control" name="page_number"
            value="<%= @book.page_number %>" disabled >
            <label for="page_number"><%= t "books.page_number" %></label>
          </span>
          <span class="has-float-label">
            <input type="text" class="form-control" name="current"
              value="<%= @book.current %>" disabled >
            <label for="current"><%= t "books.current" %></label>
          </span>
        </div>
        <div class="form-group has-float-label">
          <input type="text" class="form-control" name="book_author_id"
            value="<%= @book.author_name %>" disabled >
          <label for="book_author_id"><%= t "author" %></label>
        </div>
        <div class="form-group has-float-label">
          <input type="text" class="form-control" name="book_subcategory_id"
            value="<%= @book.subcategory_name %>" disabled >
          <label for="book_subcategory_id"><%= t "category" %></label>
        </div>
        <div class="form-group has-float-label">
          <input type="text" class="form-control" name="book_publisher_id"
            value="<%= @book.publisher_name %>" disabled >
          <label for="book_publisher_id"><%= t "publisher" %></label>
        </div>
        <div class="form-group has-float-label">
          <textarea class="form-control" name="description" rows="5" disabled>
            <%= raw @book.description %>
          </textarea>
          <label for="description"><%= t "books.description" %></label>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to t("books.edit_book"), edit_admin_book_path(@book),
        class: "edit", remote: true %>
      <button class="btn btn-success" data-dismiss="modal" aria-hidden="true">
        <%= t "confirm" %>
      </button>
      <%= link_to t("books.delete_book"), admin_book_path(@book),
        class: "delete", method: :delete,
        data: {confirm: t("books.confirm_delete")} %>
    </div>
  </div>
</div>
