<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title"><%= @publisher.name %></h3>
    </div>
    <div class="modal-body">
      <div class="col-md-4 picture">
        <div class="img-avatar bg">
          <%= image_tag @publisher.image.present? ? @publisher.image : Settings.author_avatar,
            id: "thumb" %>
        </div>
      </div>
      <div class="col-md-8 info">
        <div class="form-group has-float-label">
          <input type="text" class="form-control" name="email"
            value="<%= @publisher.email %>" disabled >
          <label for="email"><%= t "email" %></label>
        </div>
        <div class="form-group has-float-label">
          <input type="text" class="form-control" name="phone"
            value="<%= @publisher.phone %>" disabled >
          <label for="phone"><%= t "phone" %></label>
        </div>
        <div class="form-group has-float-label">
          <input type="text" class="form-control" name="address"
            value="<%= @publisher.address %>" disabled >
          <label for="address"><%= t "address" %></label>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to t("publishers.edit_publisher"), edit_admin_publisher_path(@publisher),
        class: "edit", remote: true %>
      <button class="btn btn-success" data-dismiss="modal" aria-hidden="true">
        <%= t "confirm" %>
      </button>
      <%= link_to t("publishers.delete_publisher"), admin_publisher_path(@publisher),
        class: "delete", method: :delete,
        data: {confirm: t("publishers.confirm_delete")} %>
    </div>
  </div>
</div>
