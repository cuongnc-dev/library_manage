<tr>
  <td><%= link_to (name_limit user.name), admin_user_path(user),
    remote: true %></td>
  <td><%= link_to (name_limit user.email), admin_user_path(user),
    remote: true %></td>
  <td><%= link_to user.phone? ? user.phone : "", admin_user_path(user),
    remote: true %></td>
  <td><%= link_to user.address? ? (name_limit user.address) : "",
    admin_user_path(user), remote: true %></td>
  <td>
    <%= link_to admin_user_path(user), remote: true do %>
      <% if user.is_admin? %>
        <%= t "admin" %>
      <% else %>
        <%= t "user" %>
      <% end %>
    <% end %>
  </td>
  <td class="capitalize">
    <%= link_to user.activated? ? user.activated : t("false"),
    admin_user_path(user), remote: true %></td>
  <td class="image">
    <%= link_to image_tag(user.avatar.present? ? user.avatar : ""),
      remote: true %>
    <div class="edit-delete">
      <%= link_to "", edit_admin_user_path(user), remote: true,
        class: "glyphicon glyphicon-pencil" %>
    </div>
  </td>
</tr>
